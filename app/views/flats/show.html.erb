<div class="conatiner">

  <div class="col-4">
    <div class="card mb-3">
      <div class="card-image">
        <h3> <%= @flat.name %> </h3>
      </div>

      <div class="card-content">
        <h5><%= number_to_currency(@flat.price_per_night, percision: 0) %></h5>
        <p> 🛌: <%= @flat.bedrooms %> / 🛀: <%= @flat.bathrooms %> </p>
      </div>

      <div class="card-actions">
        <%= link_to '🏡', flats_path %>
        <%= link_to '✍️', edit_flat_path(@flat) %>
        <%= link_to '🗑', flat_path(@flat), method: :delete %>
      </div>
    </div>
  </div>
</div>
